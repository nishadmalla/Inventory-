<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/registerFname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter first name"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/registerLName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter last name"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/registerAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter address"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/registerContact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter phone number"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="phone"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter email"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:hint="Enter password"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign up"
        android:backgroundTint="#334BFF"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/displaySignupResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/btnLoginnavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Click here"
        android:textColor="#334BFF"
        android:textSize="14sp"
        android:layout_gravity="center"/>

</LinearLayout>
